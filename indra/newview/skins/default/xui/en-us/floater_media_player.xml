<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater
	name="PhoenixMediaPlayer"
	rect_control="PhoenixMPRect"
	title="Media Player"
	can_resize="false"
	can_minimize="true"
	can_close="true"
	can_drag_on_left="false"
	width="610"
	height="460">
	<text
		bg_visible="false"
		border_drop_shadow_visible="false"
		border_visible="false"
		bottom="420"
		drop_shadow_visible="true"
		follows="left|top"
		font="SansSerifSmall"
		halign="left"
		height="16"
		left="10"
		mouse_opaque="true"
		name="Now playing"
		width="180">
	Now playing:
	</text>
	<text
		bg_visible="false"
		border_drop_shadow_visible="false"
		border_visible="false"
		bottom_delta="0"
		drop_shadow_visible="true"
		follows="left|top"
		font="SansSerifSmall"
		halign="left"
		height="16"
		left_delta="70"
		mouse_opaque="true"
		name="mp_np_text"
		width="180">
    ARTIST - SONG
	</text>
	<button
		name="mp_prev"
		label="Prev"
		font="SansSerifSmall"
		right="500"
		bottom_delta="0"
		width="58"
		height="20"
		follows="right|top"/>
	<button
		name="mp_play"
		label="Play"
		font="SansSerifSmall"
		left_delta="55"
		bottom_delta="0"
		width="58"
		height="20"
		follows="right|top"/>
	<button
		name="mp_pause"
		label="Pause"
		font="SansSerifSmall"
		left_delta="0"
		bottom_delta="0"
		width="58"
		height="20"
		follows="right|top"
		visible="false"/>
	<button
		name="mp_next"
		label="Next"
		font="SansSerifSmall"
		left_delta="55"
		bottom_delta="0"
		width="58"
		height="20"
		follows="right|top"/>
	<slider
		bottom_delta="-17"
		decimal_digits="3"
		enabled="true"
		height="20"
		increment="1"
		initial_val="0"
		left="10"
		max_val="1000"
		min_val="0"
		mouse_opaque="true"
		name="mp_seek"
		show_text="false"
		value="0"
		volume="false"
		width="590"/>
	<tab_container
		label="Default"
		top_delta="-18"
		left="3"
		mouse_opaque="false" 
		name="mp_tabs"
		tab_min_width="50"
		tab_position="top"
		width="605"
		height="397"
		bg_opaque_color="0,0,0,0.0"
		follows="left|top|right|bottom">
		<panel border="true"
			left="0"
			bottom="0"
			follows="left|top|right|bottom"
			height="350"
			label="Playlist"
			mouse_opaque="true"
			name="mp_playlist_tab"
			width="605">
			<scroll_list
				left="3"
				draw_heading="true"
				draw_stripes="true"
				follows="left|top|right|bottom"
				height="320"
				multi_select="true"
				name="mp_playlist"
				tab_stop="true"
				width="599">
				<column label="File Name" name="mp_file_name" width="599" />
			</scroll_list>
			<button
				name="mp_add_file"
				label="Add File"
				font="SansSerifSmall"
				left_delta="0"
				bottom_delta="-24"
				width="58"
				height="20"
				follows="left|bottom"/>
			<button
				name="mp_add_URL"
				label="Add URL"
				font="SansSerifSmall"
				left_delta="60"
				bottom_delta="0"
				width="58"
				height="20"
				follows="left|bottom"/>
			<button
				name="mp_rem"
				label="Remove"
				font="SansSerifSmall"
				left_delta="60"
				bottom_delta="0"
				width="58"
				height="20"
				follows="left|bottom"/>
		</panel>
		<panel border="true"
			left="0"
			bottom="0"
			follows="left|top|right|bottom"
			height="350" 
			label="Media"
			mouse_opaque="true"
			name="mp_media_disp"
			width="605">
			<texture_picker
				left="3"
				allow_no_texture="false" 
				an_apply_immediately="false"
				default_image_name="Default"
				enabled="false"
				height="359"
				follows="left|top|right|bottom"
				name="mp_media_image"
				tab_stop="true"
				width="599"/>
		</panel>
	</tab_container>
</floater>