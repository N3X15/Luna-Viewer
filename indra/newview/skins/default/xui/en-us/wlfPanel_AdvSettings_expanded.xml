<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel bg_visible="false" border="false" border_visible="false" bottom="1"
     follows="left|bottom" height="220" left="0" name="Adv_Settings"
     use_bounding_rect="true" width="200" >
<panel bottom="0" filename="panel_bg_tab.xml" height="220" left="0" width="205" />
<slider bottom="195" left="5" control_name="RenderFarClip"
	     decimal_digits="0" enabled="true" follows="left|bottom" height="20"
	     increment="8" label="Draw Dist.:" can_edit_text="true"
	     label_width="66" max_val="1024" min_val="24" mouse_opaque="true"
	     name="DrawDistance" show_text="true" width="195" tool_tip="Change your Draw Distance"/>
<slider bottom_delta="-20" left_delta="-0" control_name="ThrottleBandwidthKBPS"
	     decimal_digits="0" enabled="true" follows="left|bottom" height="20"
	     increment="50" label="Bandwidth:" can_edit_text="true"
	     label_width="66" max_val="5000" min_val="50" mouse_opaque="true"
	     name="max_bandwidth" show_text="true" width="195" tool_tip="Set your Network bandwidth in kbps (kilobits per second)"/>
<slider bottom_delta="-20" left_delta="-0" control_name="RenderMaxPartCount"
	     decimal_digits="0" enabled="true" follows="left|bottom" height="20"
	     increment="256" label="Particles:" can_edit_text="true"
	     label_width="66" max_val="8192" min_val="0" mouse_opaque="true"
	     name="MaxParticleCount" show_text="true" width="195" tool_tip="Amount of particles to render"/>
<slider bottom_delta="-20" left_delta="-0" control_name="RenderAvatarMaxVisible"
	     decimal_digits="0" enabled="true" follows="left|bottom" height="20"
	     increment="1" label="Max Avatars:" can_edit_text="true"
	     label_width="66" max_val="50" min_val="1" mouse_opaque="true"
	     name="RenderAvatarMaxVisible" show_text="true" width="195" tool_tip="How many avatars to fully render on screen. Lowering this greatly improves FPS in crowded situations. Requires Avatar Impostors to be on. [Default 35]"/>
<slider bottom_delta="-20" left_delta="-0" control_name="RenderMaxNodeSize"
	     decimal_digits="0" enabled="true" follows="left|bottom" height="20"
	     increment="64" label="Max Node:" can_edit_text="true"
	     label_width="66" max_val="16382" min_val="64" mouse_opaque="true"
	     name="RenderMaxNodeSize" show_text="true" width="195" tool_tip="Maximum memory size limit for rendering NEW objects, in Kb. Anything over the limit will not be rendered. [Default 4096]"/>
<slider bottom_delta="-20" left_delta="-0" control_name="RenderVolumeLODFactor"
       decimal_digits="2" enabled="true" follows="left|bottom" height="20"
       increment="0.1" label="LOD Factor:" can_edit_text="true"
       label_width="66" max_val="8" min_val="0" mouse_opaque="true"
       name="RenderVolumeLODFactor" show_text="true" width="195" tool_tip="Controls level of detail of primitives (multiplier for current screen area when calculated level of detail) [Default 2.00]"/>
<slider name="progressive_draw_distance_interval" control_name="RenderFarClipSteppingInterval" 
       decimal_digits="0" enabled="true" left_delta="-0" bottom_delta="-20" label="DD Step Time:"
	   follows="left|bottom" label_width="66" height="20" increment="1" initial_val="20" max_val="30" can_edit_text="true"
	   min_val="5" mouse_opaque="true" show_text="true" width="195" auto_resize="false" tool_tip="Interval in seconds between each draw distance increment"/>

<button bottom_delta="-22" left="2" enabled="true" follows="left|bottom" height="14" width="14"
	     image_overlay="Inv_WindLight.png" label="" mouse_opaque="true"
	     name="EnvAdvancedSkyButton" scale_image="true" tool_tip="Sky Settings" />
<combo_box name="WLPresetsCombo" bottom_delta="-0" left="16" follows="left|bottom" height="18" width="145" max_chars="20" mouse_opaque="true" allow_text_entry="false"
       tool_tip="WindLight Presets for your Sky." />
<button bottom_delta="-0" follows="left|bottom"  enabled="true" font="SansSerif" halign="center" height="20"
	   label="" label_selected="" left_delta="146" image_overlay="arrow_left.tga"
	   mouse_opaque="true" name="WLprev" scale_image="true" width="20" />
<button bottom_delta="-0" follows="left|bottom" enabled="true" font="SansSerif" halign="center" height="20"
	   label="" label_selected="" left_delta="20" image_overlay="arrow_right.tga"
	   mouse_opaque="true" name="WLnext" scale_image="true" width="20" />	 

<button bottom_delta="-22" left="2" enabled="true" follows="left|bottom" height="14" width="14"
	     image_overlay="Inv_WaterLight.png" label="" mouse_opaque="true"
	     name="EnvAdvancedWaterButton" scale_image="true" tool_tip="Water Settings" />
<combo_box name="WWPresetsCombo" bottom_delta="-0" left="16" follows="left|bottom" height="18" width="145" max_chars="20" mouse_opaque="true" allow_text_entry="false"
	   tool_tip="WindLight Presets for your Water." />
<button bottom_delta="-0" follows="left|bottom" enabled="true" font="SansSerif" halign="center" height="20"
	   label="" label_selected="" left_delta="146" image_overlay="arrow_left.tga"
	   mouse_opaque="true" name="WWprev" scale_image="true" width="20" />
<button bottom_delta="-0" follows="left|bottom" enabled="true" font="SansSerif" halign="center" height="20"
	   label="" label_selected="" left_delta="20" image_overlay="arrow_right.tga"
	   mouse_opaque="true" name="WWnext" scale_image="true" width="20" />

<icon bottom_delta="-18" follows="left|top" height="14"
	   image_name="icon_day_cycle.tga" left="15" name="daycycle" width="150" />
<slider bottom_delta="-8" can_edit_text="false" control_name="EnvTimeSlider"
	   left="5" decimal_digits="2" follows="left|top" height="10" increment="0.0069444"
	   initial_val="0.7" label="" max_val="0.99" min_val="0" mouse_opaque="true"
	   name="EnvTimeSlider" show_text="false" value="0.0" width="160" />

<button bottom="1" height="22" label=""
	     left="173" name="expand" scale_image="true" toggle="true"
	     tool_tip="Hide the Settings Panel" width="22"/>
</panel>
