		<combo_item name="PointLeft">
			指左边
		</combo_item>
		<combo_item name="FistLeft">
			左手
		</combo_item>
		<combo_item name="RelaxedRight">
			放松右边
		</combo_item>
		<combo_item name="PointRight">
