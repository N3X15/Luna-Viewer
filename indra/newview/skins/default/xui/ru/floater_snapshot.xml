<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="Snapshot" title="Просмотр скриншота" width="225">
	<text name="type_label">
		Куда сохранить скриншот
	</text>
	<radio_group label="Тип скриншота" name="snapshot_type_radio" width="205">
		<radio_item name="postcard">
			Отправить по email
		</radio_item>
		<radio_item name="texture">
			Сохранить в инвентарь (L$[AMOUNT])
		</radio_item>
		<radio_item name="local">
			Сохранить на жесткий диск
		</radio_item>
	</radio_group>
	<text name="file_size_label">
		Размер файла: [SIZE] KB
	</text>
	<button label="Обновить Скриншот" name="new_snapshot_btn"/>
	<button label="Отправить" name="send_btn"/>
	<button label="Загруз.(L$[AMOUNT])" name="upload_btn"/>
